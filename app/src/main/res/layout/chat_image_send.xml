<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_gravity="right"
    android:layout_marginTop="5dp"

    >

    <com.docpoc.doctor.utils.RoundedImageView
        android:id="@+id/imgPerson"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgPerson"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="asdfadf"
            android:textColor="@android:color/black"
            android:textSize="10dp" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"


            android:layout_toLeftOf="@+id/imgPerson"

            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:padding="2dp">

                <com.docpoc.doctor.utils.RoundCornerImageView
                    android:id="@+id/imgMessage"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />


                <ImageView
                    android:id="@+id/imgDownload"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/download_png"
                    android:visibility="gone" />

                <View
                    android:id="@+id/viewTransprent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#44ffffff"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/pBar"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
