<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:background="@color/header_color">


    <com.docpoc.doctor.utils.RobottoEditTextView

        android:id="@+id/activity_pt_login_et_emailId"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
       
     
        android:layout_marginTop="15dp"
        android:background="@drawable/borderthin"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#FFFfff"
        android:textSize="12dp">

    </com.docpoc.doctor.utils.RobottoEditTextView>

    <com.docpoc.doctor.utils.RobottoEditTextView

        android:id="@+id/activity_pt_login_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_pt_login_et_emailId"
       
     
        android:layout_marginTop="12dp"
        android:background="@drawable/borderthin"
        android:hint="Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#FFFfff"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_pt_login_et_pwd"
       
     
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.docpoc.doctor.utils.RobottoTextView
            android:id="@+id/activity_pt_login_tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Forgot Fassword?"
            android:textColor="#FFF"
            android:textSize="12dp" />


    </LinearLayout>


    <com.docpoc.doctor.utils.RobottoTextView
        android:id="@+id/activity_pt_login_tv_logIN"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
       
      
        android:layout_marginTop="35dp"
        android:background="@drawable/borde_login"
        android:gravity="center"
        android:hint="LOG IN"
        android:padding="5dp"
        android:textColorHint="@color/grey_color"

        android:textSize="12dp"></com.docpoc.doctor.utils.RobottoTextView>

    <!--<ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_pt_login_tv_logIN"
        android:layout_centerHorizontal="true"
       
      
        android:layout_marginTop="12dp"
        android:src="@drawable/fb_log" /> -->
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/activity_pt_login_tv_logIN"
        android:layout_centerInParent="true"
       
      
        android:layout_marginTop="12dp"
        android:text="LOGIN WITH FACEBOOK" />

    <com.docpoc.doctor.utils.RobottoTextView
        android:id="@+id/activity_pt_login_tv_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"

        android:text="Don't have an account Singup"
        android:textColor="#FFF"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDoctorSignUp"
       
     
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <com.docpoc.doctor.utils.RobottoTextView
            android:id="@+id/activity_pt_login_tv_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:gravity="center"
            android:text="@string/terms_conditions"
            android:textColor="@color/dark_grey_color"
            android:textSize="12dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ronud_fb" />

    </FrameLayout>


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/include1"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:src="@drawable/transpernt_icon" />

    <com.docpoc.doctor.utils.RobottoTextView
        android:id="@+id/tvDoctorSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Click here"
        android:textColor="#FFF"
        android:textSize="12dp"
        android:layout_below="@+id/activity_pt_login_tv_SignUp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>