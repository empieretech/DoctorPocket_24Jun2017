<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_screen">

    <RelativeLayout
        android:id="@+id/header_doc_search"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#0FC9FC"

        >

        <com.docpoc.doctor.utils.AngellinaTextView
            android:id="@+id/custom_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Doctor Pocket"
            android:textColor="#FFF"
            android:textSize="45dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/custom_text"
            android:background="@drawable/white_round"
            android:gravity="center"
            android:text="TM"

            android:textColor="#555"
            android:textSize="6dp" />

        <ImageView
            android:id="@+id/img_logout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/custom_text"
            android:src="@drawable/logout_512" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/linearLayout2"


        android:orientation="horizontal">

        <com.docpoc.doctor.utils.RobottoTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageView4"
            android:layout_marginLeft="40dp"
            android:text="About Us"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <com.docpoc.doctor.utils.RobottoTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:text="Share"

            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_how_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/edit_icon" />

        <ImageView
            android:id="@+id/img_search_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/icon_stestho" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/linearLayout4"


        android:orientation="horizontal">

        <com.docpoc.doctor.utils.RobottoTextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_marginLeft="30dp"
            android:text="How It Works?"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <com.docpoc.doctor.utils.RobottoTextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Search Doctor"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#2492D1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_PtProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/share_bottom" />

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#fff" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/cal_bottom" />

            <TextView
                android:id="@+id/tvBadge"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/img_appointment"
                android:layout_alignTop="@+id/img_appointment"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"

                android:background="@drawable/red_round"
                android:gravity="center"
                android:text="10"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#fff" />

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/message_bottom" />

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#fff" />

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ques_bottom" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/heart" />

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header_doc_search"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"

            android:src="@drawable/about_us_icon" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/share_icon" />
    </RelativeLayout>

</RelativeLayout>