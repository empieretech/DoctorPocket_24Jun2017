<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/home_screen" >

<RelativeLayout
    android:id="@+id/rli"
    android:layout_width="match_parent"
    android:layout_height="55dp" >



    <com.docpoc.doctor.utils.AngellinaTextView
        android:id="@+id/txtheader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Doctor List" android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:src="@drawable/arrow_left" />

</RelativeLayout>

<View
    android:id="@+id/view1"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/rli"
    android:background="#003366" />

<RelativeLayout
    android:id="@+id/rl_search"
    android:layout_height="30dp"
    android:layout_width="match_parent"
    android:layout_below="@+id/view1"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/borde_login"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:src="@drawable/ic_search" />

    <EditText
        android:id="@+id/edit_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:paddingLeft="5dp">


    </EditText>

</RelativeLayout>

<View
    android:id="@+id/view2"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/view1"
    android:layout_marginTop="50dp"
    android:background="#003366" />

<ListView
    android:id="@+id/list_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/view2"
    android:layout_margin="10dp"
    android:dividerHeight="10dp"
    android:divider="@android:color/transparent" >
</ListView>


</RelativeLayout>
